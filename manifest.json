{
    "manifest_version": 2,
    "name": "Savitar",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["code/content.js"]
        }
    ],
    "permissions": ["tabs", "storage"],
    "browser_action": {
        "default_icon": "assets/img/icon.jpg",
        "default_popup": "code/popup.html",
        "default_title": "Linkedin summary plugin"
    }
}
